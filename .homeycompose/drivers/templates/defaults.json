{
    "images": {
        "large": "{{driverPath}}/assets/images/large.png",
        "small": "{{driverPath}}/assets/images/small.png"
    },
    "capabilities": [
        "measure_battery",
        "measure_orp",
        "measure_ph",
        "measure_rssi",
        "measure_salt",
        "measure_tds",
        "measure_temperature"
    ],
    "energy": {
        "batteries": ["INTERNAL"]
    },
    "class": "other",
    "pair": [
        {
            "id": "login_oauth2",
            "template": "login_oauth2"
        },
        {
            "id": "list_devices",
            "template": "list_devices",
            "navigation": {
                "next": "add_devices"
            }
        },
        {
            "id": "add_devices",
            "template": "add_devices"
        }
    ],
    "repair": [
        {
            "id": "login_oauth2",
            "template": "login_oauth2"
        }
    ],
    "$flow": {
        "triggers": [
            { "$extends": "measure_orp_changed" },
            { "$extends": "measure_ph_changed" },
            { "$extends": "measure_rssi_changed" },
            { "$extends": "measure_salt_changed" },
            { "$extends": "measure_tds_changed" }
        ]
    },
    "settings": [
        {
            "type": "group",
            "label": {
                "en": "Properties",
                "de": "Eigenschaften",
                "fr": "Propriétés",
                "it": "Proprietà",
                "nl": "Eigenschappen"
            },
            "children": [
                {
                    "id": "volume",
                    "type": "label",
                    "label": {
                        "en": "Total Volume",
                        "de": "Volle Lautstärke",
                        "fr": "Volume total",
                        "it": "Volume totale",
                        "nl": "Totaal volume"
                    },
                    "value": "-"
                },
                {
                    "id": "serial_number",
                    "type": "label",
                    "label": {
                        "en": "Serial Number",
                        "de": "Ordnungsnummer",
                        "fr": "Numéro de série",
                        "it": "Numero di serie",
                        "nl": "Serienummer"
                    },
                    "value": "-"
                },
                {
                    "id": "sw_version",
                    "type": "label",
                    "label": {
                        "en": "Software Version",
                        "de": "Softwareversion",
                        "fr": "Une version de logiciel",
                        "it": "Versione software",
                        "nl": "Software versie"
                    },
                    "value": "-"
                }
            ]
        }
    ]
}
